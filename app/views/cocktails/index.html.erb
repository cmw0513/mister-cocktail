<div class="text-center">
  <h1>Ms. Cocktail suggests...</h1>

  <div class="container fogged">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <% if cocktail.picture_file_name %>
          <div class="col-xs-12 col-md-4">
            <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
            <%= image_tag cocktail.picture.url(:thumb), class: "img-circle" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <h3><%= link_to "Suggest a cocktail", new_cocktail_path, class: "btn btn-primary" %></h3>
</div>
