<h1><%= @cocktail.name %></h1>
<%= image_tag @cocktail.picture.url(:medium), class: "img-circle" %>
<% @cocktail.doses.each do |dose| %>
  <h2><%= dose.ingredient.name %> - <%= dose.description %></h2><p><%= link_to 'delete',dose_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></p>
<% end %>
<h3><%= link_to "Add something", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %></h3>
